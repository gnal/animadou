{% extends 'MsiCmfBundle:Page:layout.html.twig' %}

{% block css %}
<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('bundles/anicore/css/style.css') }}">
{{ parent() }}
<script>
function nl(t){t.className=t.className.replace(new RegExp(/\shide|hide\s|hide/),'');}
</script>
{% endblock css %}

{% block js %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
<script src="{{ asset('bundles/anicore/vendor/msi-slider/js/msi-slider.js') }}"></script>
<script src="{{ asset('bundles/anicore/vendor/superfish-1.4.8/js/hoverIntent.js') }}"></script>
<script src="{{ asset('bundles/anicore/vendor/superfish-1.4.8/js/superfish.js') }}"></script>
{{ parent() }}
<script>
jQuery(function(){
    jQuery('ul.sf-menu').superfish({
        speed: 'normal',
        delay: 0,
        autoArrows: false,
        disableHI: true,
        animation: {opacity: 'show', height: 'show'},
    });
});
</script>
<script>
(function($) {
    "use strict";
    $('#slider').msiSlider({
        axis: 'y',
        pauseTime: 3800,
        carouselSpeed: 400,
        sliderSpeed: 800,
        carouselLiDimension: 50,
        cycle: true,
        slider: true,
        sliderEffect: 'fade',
        sliderArgs: {mode: 'show', easing: 'easeInCirc'},
    });
})(jQuery);
</script>
{% endblock js %}

{% block body %}
<div class="container">
    <div class="header">
        <div class="text-right topbar">
            <small>
                <a href="#">{{ 'Home'|trans }}</a>
                |
                <a href="{{ path('msi_page_home', {'_locale': app.request.locale == 'fr' ? 'en' : 'fr'}) }}">{{ app.request.locale == 'fr' ? 'English' : 'Fran√ßais' }}</a>
            </small>
        </div>
        <div class="row">
            <div class="span5">
                {# LOGO #}
                <h1><a href="{{ path('msi_page_home') }}">ANIMADOU</a></h1>
            </div>
            <div class="span7" style="margin-left: 0;width: 560px;">
                {# NAVIGATION #}
                <div class="sf-menu-wrap">
                    {{ knp_menu_render('AniCoreBundle:MenuBuilder:mainMenu', {'allow_safe_labels': true, 'depth': 3, 'currentClass': 'active'}) }}
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

    <hr>

    <div class="content">
        {# SLIDER #}
        {% if page.slides.count %}
            <div style="box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);margin-bottom: 30px;">
            <div class="row">
                <div class="span5">
                    <div class="slider-text">
                        <h2>Express Help For Your Pets!</h2>
                        <p>Pellentesque ut massa vitae tortor consequat adipiscing. Nunc consequat rutrum urna eu rhoncus. Aliquam erat volutpat.</p>
                        <p>&bull; &bull; &bull;</p>
                    </div>
                </div>
                <div class="span7" style="margin-left: 0;width: 560px;">
                    <div id=slider>
                        <ul class="unstyled slider">
                            {% for slide in page.slides %}
                                <li><img class="hide" onload="nl(this);" src="{{ slide.pathname }}" alt="0"></li>
                            {% endfor %}
                        </ul>
                        <div class="carousel-wrap">
                            <ul class="unstyled carousel">
                                {% for slide in page.slides %}
                                    <li><img class="hide" onload="nl(this);" src="{{ slide.pathname('t') }}" alt="0"></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        {% endif %}
        {# CONTENT #}
        {% if page.showTitle %}<h2>{{ block('title') }}</h2>{% endif %}
        {{ block('page_content') }}
    </div>

    <hr>

    <div class="footer">
        <small>&copy; {{ 'now'|date('Y') }} Animadou. All rights reserved.</small>
    </div>
</div>
{% endblock body %}
